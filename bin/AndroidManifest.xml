<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rapidscholar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />
     <uses-permission 
         android:name="android.permission.INTERNET"/> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/lazy_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity 
            android:name="com.example.rapidscholar.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:name="com.example.rapidscholar.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.rapidscholar.MakeItAMeal"
            android:label="@string/title_activity_make_it_ameal" >
        </activity>
        <activity 
            android:name="com.example.rapidscholar.ScannerFragment"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
